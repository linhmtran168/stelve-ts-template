{
  "include": ["src/**/*", "*.config.js", ".eslintrc.js"],
  "exclude": ["node_modules/**/*", "public/**/*"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "types": ["jest", "svelte"],
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "src",
    "rootDir": "src",
    "noEmit": true,
  }
}